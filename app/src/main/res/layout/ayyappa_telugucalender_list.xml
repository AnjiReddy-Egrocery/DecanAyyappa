<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Month Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/btnPrev"
            android:src="@android:drawable/ic_media_previous"
            android:tint="#D32F2F"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="జనవరి 2023"/>

        <ImageView
            android:id="@+id/btnNext"
            android:src="@android:drawable/ic_media_next"
            android:tint="#D32F2F"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <!-- Week Label Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:background="#000"
        android:paddingBottom="8dp">

        <TextView style="@style/WeekHeaderStylesun" android:text="Sun"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Mon"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Tue"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Wed"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Thu"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Fri"/>
        <TextView style="@style/WeekHeaderStyle" android:text="Sat"/>


    </LinearLayout>


    <!-- Calendar Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>